#include "raytracing_global.inc"

[shader("closesthit")] 
void ClosestHit(inout HitInfo payload, Attributes attrib) 
{
	// TODO: Handle lighting and normals. For now we are showing the distance.
	float color = RayTCurrent() / 1000.0f;
	payload.diffuse = float3(0.0f, color, 0.0f);

	payload.indirect = float3(0.0f, 0.0f, 0.0f);
    payload.specular = float3(0.0f, 0.0f, 0.0f);
}